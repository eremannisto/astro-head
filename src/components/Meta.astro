---

import type { Meta } from "../types";

const { 
  charset = "utf-8",
  content,
  httpEquiv,
  media,
  name,
  property,
} = Astro.props as Meta;

---

<meta
  {...(charset   ? { charset   } : {})}
  {...(content   ? { content   } : {})}
  {...(httpEquiv ? { httpEquiv } : {})}
  {...(media     ? { media     } : {})}
  {...(name      ? { name      } : {})}
  {...(property  ? { property  } : {})}
/>