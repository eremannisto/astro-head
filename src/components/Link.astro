---

import type { Link } from "../types";

const {
  rel,
  href,
  as,
  blocking,
  crossorigin,
  disabled,
  fetchpriority,
  hreflang,
  imagesizes,
  imagesrcset,
  integrity,
  media,
  referrerpolicy,
  sizes,
  title,
  type,
} = Astro.props as Link;

---

<link
  rel={rel}
  href={href}
  {...(as             ? { as             } : {})}
  {...(blocking       ? { blocking       } : {})}
  {...(crossorigin    ? { crossorigin    } : {})}
  {...(disabled       ? { disabled: true } : {})}
  {...(fetchpriority  ? { fetchpriority  } : {})}
  {...(hreflang       ? { hreflang       } : {})}
  {...(imagesizes     ? { imagesizes     } : {})}
  {...(imagesrcset    ? { imagesrcset    } : {})}
  {...(integrity      ? { integrity      } : {})}
  {...(media          ? { media          } : {})}
  {...(referrerpolicy ? { referrerpolicy } : {})}
  {...(sizes          ? { sizes          } : {})}
  {...(title          ? { title          } : {})}
  {...(type           ? { type           } : {})}
/> 