---

import type { Head } from "../types";
import Author      from "./Author.astro";
import Canonical   from "./Canonical.astro";
import Description from "./Description.astro";
import Favicon     from "./Favicon.astro";
import Follow      from "./Follow.astro";
import Index       from "./Index.astro";
import Keywords    from "./Keywords.astro";
import OpenGraph   from "./OpenGraph.astro";
import Title       from "./Title.astro";
import ThemeColor  from "./ThemeColor.astro";
import Twitter     from "./Twitter.astro";

const { 
  author,
  canonical,
  description, 
  favicons,
  follow,
  image, 
  index,
  keywords, 
  openGraph,
  template,
  themeColor,
  title,
  twitter,
} = Astro.props as Head;

---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />

  <Title value={title} template={template} />
  <Description value={description} />
  <Keywords value={keywords} />

  {!openGraph ? (
    <OpenGraph 
      title={title} 
      description={description} 
      image={image} 
      url={canonical} 
    />
  ) : ( <OpenGraph {...openGraph} /> )}

  {!twitter ? (
    <Twitter 
      title={title} 
      description={description} 
      image={image} 
    />
  ) : ( <Twitter {...twitter} /> )}

  <Index value={index} />
  <Follow value={follow} />
  <Canonical value={canonical} />
  <Author value={author} />
  <ThemeColor value={themeColor} />

  <Favicon icons={favicons} />

  <slot />
</head>

